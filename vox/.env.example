# VOX Environment Variables

# Database
DATABASE_URI=postgresql://postgres:password@localhost:5432/vox
POSTGRES_URL=postgresql://postgres:password@localhost:5432/vox

# Payload
PAYLOAD_SECRET=your-secret-key-here
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Initial Admin Creation
# Set to 'true' to allow creating the first admin account from the login page
# when no admin users exist in the system. Set to 'false' or remove in production.
ALLOW_INITIAL_ADMIN_CREATION=true

# Production Seeding
# Credentials for the initial accounts created by `pnpm seed:prod`
SEED_DEV_1_EMAIL=dev1@example.com
SEED_DEV_1_PASSWORD=password123
SEED_DEV_2_EMAIL=dev2@example.com
SEED_DEV_2_PASSWORD=password123
SEED_ADMIN_POC_EMAIL=poc@example.com
SEED_ADMIN_POC_PASSWORD=password123
SEED_ADMIN_OTHER_EMAIL=admin2@example.com
SEED_ADMIN_OTHER_PASSWORD=password123
